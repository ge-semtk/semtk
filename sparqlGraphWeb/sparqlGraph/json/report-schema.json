{
	"definitions": {
	 	"Nodegroup": {
	 		"type": "string",
	 		"minLength": 4
	 	},
		"Plot": {
			"type": "object",
			"required": [
				"nodegroup",
				"plotname"
			],
			"headerTemplate": "Plot: {{self.nodegroup}}",
			"properties": {
				"nodegroup": {
					"$ref": "#/definitions/Nodegroup"
				},
				"plotname": {
					"type": "string",
					"minLength": 2
				}
			}
		},
		"Table": {
			"type": "object",
			"required": [
				"nodegroup"
			],
			"headerTemplate": "Table: {{self.nodegroup}}",
			"properties": {
				"nodegroup": {
					"$ref": "#/definitions/Nodegroup"
				}
			}
		},
		"Graph": {
			"type": "object",
			"required": [
				"nodegroup"
			],
			"headerTemplate": "Graph: {{self.nodegroup}}",
			"properties": {
				"nodegroup": {
					"$ref": "#/definitions/Nodegroup"
				}
			}
		},
		"Range": {
			"type": "object",
			"required": [
				"format"
			],
			"headerTemplate": "{{self.format}}",
			"properties": {
				"lte": {
					"type": "integer",
					"default": 0
				},
				"gte": {
					"type": "integer",
					"default": 1
				},
				"status": {
					"type": "string",
					"enum": [
						"success",
						"failure"
					]
				},
				"format": {
					"type": "string"
				},
				"sections": {
					"$ref": "#/definitions/Sections"
				}
			}
		},
		"Count": {
			"type": "object",
			"required": [
				"nodegroup"
			],
			"headerTemplate": "Count: {{self.nodegroup}}",
			"properties": {
				"nodegroup": {
					"$ref": "#/definitions/Nodegroup"
				},
				"ranges": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Range"
					}
				}
			}
		},
		"TableTestRowCount": {
			"type": "object",
			"required": [
				"nodegroup",
				"success_rows"
			],
			"headerTemplate": "Test {{self.success_rows}} rows from: {{self.nodegroup}}",
			"properties": {
				"nodegroup": {
					"$ref": "#/definitions/Nodegroup"
				},
				"success_rows": {
					"type": "integer"
				}
			}
		},
		"Special": {
			"type": "object",
			"required": [
				"id"
			],
			"headerTemplate": "Special: {{self.id}}",
			"properties": {
				"id": {
					"type": "string",
					"enum": [
						"class_count",
						"cardinality"
					]
				}
			}
		},
		"Sections": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Section"
			}
		},
		"Section": {
			"type": "object",
			"headerTemplate": "{{self.header}}",
			"required": [
				"header"
			],
			"not": {
				"anyOf": [
					{"required": ["special","plot"]},
					{"required": ["special","count"]},
					{"required": ["special","table"]},
					{"required": ["special","table_test_row_count"]},
					{"required": ["special","graph"]},
					{"required": ["plot","count"]},
					{"required": ["plot","table"]},
					{"required": ["plot","table_test_row_count"]},
					{"required": ["plot","graph"]},
					{"required": ["count","table"]},
					{"required": ["count","table_test_row_count"]},
					{"required": ["count","graph"]},
					{"required": ["table","table_test_row_count"]},
					{"required": ["table","graph"]},
					{"required": ["table_test_row_count","graph"]}
				]
			},
			"properties": {
				"header": {
					"type": "string",
					"minLength": 4
				},
				"description": {
					"type": "string"
				},
				"special": {
					"$ref": "#/definitions/Special"
				},
				"plot": {
					"$ref": "#/definitions/Plot"
				},
				"count": {
					"$ref": "#/definitions/Count"
				},
				"table": {
					"$ref": "#/definitions/Table"
				},
				"table_test_row_count": {
					"$ref": "#/definitions/TableTestRowCount"
				},
				"graph": {
					"$ref": "#/definitions/Graph"
				},
				"sections": {
					"$ref": "#/definitions/Sections"
				}
			}
		}
	},
	"title": "Report",
	"type": "object",
	"required": [
		"title"
	],
	"properties": {
		"title": {
			"type": "string",
			"minLength": 4
		},
		"description": {
			"type": "string"
		},
		"sections": {
			"$ref": "#/definitions/Sections"
		}
	}
}